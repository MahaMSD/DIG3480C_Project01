<script>
var myEmojis = ['Laugh','Love','Cool','Silly'];
var points = [0,0,0,0];

function init(){
  var button= document.getElementById('calculate');
  button.onclick = checkQuiz;
}

function checkQuiz(){
  var tvshow;
  var movies;
  var color;
  var coffee;
  var perfume;
  var supermarket;
  var dreamvacation;
  var meal;
  var old;
  var season;
  var inputs= document.getElementsByName('tvshow');
    tvshow= findValue(inputs);
    switch(tvshow) {
      case 'Three\'s Company':
        points [0]++;
        break;
      case 'Grey\'s Anatomy':
        points [1]++;
        break;
      case 'Hannibal':
        points [2]++;
        break;
      case 'Pokemon':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('movies');
    movies= findValue(inputs);
    switch(movies) {
      case 'Big Daddy':
        points [0]++;
        break;
      case 'The Intern':
        points [1]++;
        break;
      case 'No Escape':
        points [2]++;
        break;
      case 'Minions':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('color');
    color= findValue(inputs);
    switch(color) {
      case 'Blue':
        points [0]++;
        break;
      case 'Red':
        points [1]++;
        break;
      case 'Black':
        points [2]++;
        break;
      case 'Yellow':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('coffee');
    coffee= findValue(inputs);
    switch(coffee) {
      case 'Latte':
        points[0]++;
        break;
      case 'Macchiato':
        points [1]++;
        break;
      case 'Espresso':
        points [2]++;
        break;
      case 'I don\'t drink coffee':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('perfume');
    perfume= findValue(inputs);
    switch(perfume) {
      case 'Chanel':
        points [0]++;
        break;
      case 'Burberry':
        points [1]++;
        break;
      case 'Davidoff':
        points [2]++;
        break;
      case 'Bath & Body Works':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('supermarket');
    supermarket= findValue(inputs);
    switch(supermarket) {
      case 'Winn-Dixie':
        points [0]++;
        break;
      case 'Publix':
        points [1]++;
        break;
      case 'Target':
        points [2]++;
        break;
      case 'Walmart':
        points [3]++;
        break;
    } 
  inputs= document.getElementsByName('dreamvacation');
    dreamvacation= findValue(inputs);
    switch(dreamvacation) {
      case 'Hawaii':
        points [0]++;
        break;
      case 'Maldives':
        points [1]++;
        break;
      case 'Las Vegas':
        points [2]++;
        break;
      case 'DisneyLand':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('meal');
    meal= findValue(inputs);
    switch(meal) {
      case 'Dose Dessert Count!':
        points [0]++;
        break;
      case 'Breakfast':
        points [1]++;
        break;
      case 'Dinner':
        points [2]++;
        break;
      case 'Lunch':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('old');
    old= findValue(inputs);
    switch(old) {
      case '50 and up':
        points [0]++;
        break;
      case '21-49':
        points [1]++;
        break;
      case '15-20':
        points [2]++;
        break;
      case '14 and younger':
        points [3]++;
        break;
    }
  inputs= document.getElementsByName('season');
    season= findValue(inputs);
    switch(season) {
      case 'Spring':
        points [0]++;
        break;
      case 'Winter':
        points [1]++;
        break;
      case 'Fall':
        points [2]++;
        break;
      case 'Summer':
        points [3]++;
        break;
    }
    maxScore = 0;
    maxIndex = 0;
    for (var i=0; i<points.length; i++){
      if (points[i] > maxScore){
        maxIndex=i;
      }
    }
    emoji= myEmojis[maxIndex];
    displayEmoji(emoji);
}

  function findValue(inputs) {
    var checked;
    for (var i=0; i<inputs.length; i++) {
      if (inputs[i].checked) {
        //alert(inputs[i].value);
        checked = inputs[i].value;
        return(checked);
      }
    }
    if (!checked) {
      alert('Please choose a value.');
    }
  }

function displayEmoji(emoji){
  var image= document.createElement('img');
  image.className= 'emoji';
  var source = document.getElementById('emojiParagraph');
  var text = 'Nice! You\'re the ' + emoji +' Emoji!';

      switch(emoji){
        case 'Laugh':
          image.src='http://s23.postimg.org/mouqfxpqj/Laugh_Emoji.png';
          break;
        case 'Love':
          image.src='http://s29.postimg.org/vr8nfmd8n/Love_Emoji.png';
          break;
        case 'Cool':
          image.src='http://s28.postimg.org/pfw50epy5/Cool_Emoji.png';
          break;
        case 'Silly':
          image.src='http://s18.postimg.org/6ffwv0a7t/Silly_Emoji.png';
          break;
        default:
          image.src='http://s8.postimg.org/kn2ubklj9/Sad_Emoji.png';
      }
      source.appendChild(image);
      source.innerHTML += '<br>' + text;
} 
window.onload= init; 

</script>
